{
    "openapi": "3.0.3",
    "info": {
        "title": "API Ordres de Mission",
        "description": "Documentation des endpoints de gestion des Ordres de Mission (OM) et des Véhicules. Basée sur une architecture Repository, Service, Request et Controller. Authentification par token Sanctum.",
        "version": "1.1.0"
    },
    "servers": [
        {
            "url": "/api/v1",
            "description": "Serveur principal API"
        }
    ],
    "tags": [
        {
            "name": "Ordres de Mission",
            "description": "Gestion complète des ordres de mission"
        },
        {
            "name": "Véhicules",
            "description": "Gestion des véhicules du parc automobile"
        }
    ],
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        },
        "schemas": {
            "OrdreMission": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer", "example": 1 },
                    "demandeur_id": { "type": "integer", "example": 12 },
                    "destination": { "type": "string", "example": "Dakar" },
                    "kilometrage": { "type": "integer", "example": 250 },
                    "qte_carburant": { "type": "number", "example": 25.5 },
                    "vehicule_id": { "type": "integer", "example": 3 },
                    "chauffeur_id": { "type": "integer", "example": 8 },
                    "total_frais": { "type": "number", "example": 15000 },
                    "numero_identification": {
                        "type": "string",
                        "example": "OM-2025-0001"
                    },
                    "date_depart": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-10-15"
                    },
                    "date_debut": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-10-16"
                    },
                    "date_fin": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-10-18"
                    },
                    "nb_jours": { "type": "integer", "example": 3 },
                    "statut": { "type": "string", "example": "en_attente" },
                    "chef_service_validation": {
                        "type": "boolean",
                        "example": false
                    },
                    "motif_rejet": {
                        "type": "string",
                        "nullable": true,
                        "example": null
                    },
                    "carburant_valide": { "type": "boolean", "example": false }
                }
            },
            "Vehicule": {
                "type": "object",
                "properties": {
                    "id": { "type": "integer", "example": 1 },
                    "immatriculation": {
                        "type": "string",
                        "example": "DK-1234-AA"
                    },
                    "marque": { "type": "string", "example": "Toyota" },
                    "modele": { "type": "string", "example": "Corolla" },
                    "annee": { "type": "integer", "example": 2020 },
                    "disponibilite": {
                        "type": "string",
                        "enum": ["disponible", "en_mission", "panne"],
                        "example": "disponible"
                    },
                    "created_at": { "type": "string", "format": "date-time" },
                    "updated_at": { "type": "string", "format": "date-time" }
                }
            },
            "CreateVehiculeRequest": {
                "type": "object",
                "required": ["immatriculation"],
                "properties": {
                    "immatriculation": {
                        "type": "string",
                        "example": "DK-9876-BB"
                    },
                    "marque": { "type": "string", "example": "Peugeot" },
                    "modele": { "type": "string", "example": "308" },
                    "annee": { "type": "integer", "example": 2022 },
                    "disponibilite": {
                        "type": "string",
                        "enum": ["disponible", "en_mission", "panne"],
                        "example": "disponible"
                    }
                }
            },
            "CreateOMRequest": {
                "type": "object",
                "required": [
                    "destination",
                    "kilometrage",
                    "date_debut",
                    "date_fin"
                ],
                "properties": {
                    "destination": {
                        "type": "string",
                        "example": "Saint-Louis"
                    },
                    "kilometrage": { "type": "integer", "example": 120 },
                    "qte_carburant": { "type": "number", "example": 20 },
                    "vehicule_id": {
                        "type": "integer",
                        "nullable": true,
                        "example": 5
                    },
                    "chauffeur_id": {
                        "type": "integer",
                        "nullable": true,
                        "example": 2
                    },
                    "date_depart": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-10-20"
                    },
                    "date_debut": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-10-21"
                    },
                    "date_fin": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-10-25"
                    },
                    "nb_jours": { "type": "integer", "example": 5 }
                }
            },
            "ChefServiceValidationRequest": {
                "type": "object",
                "required": ["action"],
                "properties": {
                    "action": {
                        "type": "string",
                        "enum": ["approuver", "rejeter"],
                        "example": "approuver"
                    },
                    "motif_rejet": {
                        "type": "string",
                        "nullable": true,
                        "example": "Mission non conforme"
                    }
                }
            },
            "TraiterOMDirectionRequest": {
                "type": "object",
                "required": ["decision"],
                "properties": {
                    "decision": {
                        "type": "string",
                        "enum": ["approuve", "rejete"],
                        "example": "approuve"
                    },
                    "qte_carburant": { "type": "number", "example": 30 },
                    "motif_rejet": {
                        "type": "string",
                        "nullable": true,
                        "example": "Budget insuffisant"
                    }
                }
            },
            "TraiterOMChefParcRequest": {
                "type": "object",
                "properties": {
                    "vehicule_id": {
                        "type": "integer",
                        "nullable": true,
                        "example": 2
                    },
                    "chauffeur_id": {
                        "type": "integer",
                        "nullable": true,
                        "example": 5
                    }
                }
            }
        }
    },
    "paths": {
        "/ordresMission": {
            "get": {
                "tags": ["Ordres de Mission"],
                "summary": "Lister tous les ordres de mission",
                "responses": {
                    "200": {
                        "description": "Liste chargée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "liste ordre de mission chargée avec succès"
                                        },
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/OrdreMission"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": ["Ordres de Mission"],
                "summary": "Créer un nouvel ordre de mission",
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateOMRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Ordre de mission créé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Ordre de mission crée avec succès"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/OrdreMission"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/vehicules": {
            "get": {
                "tags": ["Véhicules"],
                "summary": "Lister tous les véhicules",
                "responses": {
                    "200": {
                        "description": "Liste des véhicules récupérée avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Vehicule"
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": ["Véhicules"],
                "summary": "Créer un nouveau véhicule",
                "security": [{ "bearerAuth": [] }],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateVehiculeRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Véhicule créé avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Véhicule ajouté avec succès"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Vehicule"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/vehicules/{id}": {
            "get": {
                "tags": ["Véhicules"],
                "summary": "Afficher les détails d’un véhicule",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": { "type": "integer" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Véhicule récupéré avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Détails du véhicule récupérés avec succès"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/Vehicule"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": { "description": "Véhicule non trouvé" }
                }
            }
        }
    }
}
